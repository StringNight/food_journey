# 基础设置
APP_NAME=Food Journey
APP_VERSION=1.0.0
DEBUG=true

# 服务器设置
HOST=0.0.0.0
PORT=8000

# HTTPS设置
USE_HTTPS=true
SSL_CERTFILE=~/cert.pem
SSL_KEYFILE=~/cert.key

# 数据库设置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/food_journey_test

# JWT设置
JWT_SECRET_KEY=your_test_secret_key_123
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI设置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# 邮件设置
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# 缓存设置
REDIS_URL=
CACHE_TTL=3600

# 限流设置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60 